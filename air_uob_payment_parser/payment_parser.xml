<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	<record model="ir.ui.view" id="view_res_bank_inherit_air_form">
            <field name="name">res.bank.form</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//group/field[@name='bic']" position="after">
            		<field name="bank_uob"/> 
            	</xpath>
            </field>
         </record>
         
         <record id="view_bank_file_attachment_form" model="ir.ui.view">
			<field name="name">bank.file.attachment.form</field>
			<field name="model">bank.file.attachment</field>
			<field name="arch" type="xml">
				<form string="Bank File Attachment" create='false' edit='false'>
					<group col="4" colspan="4">
						<field name="name"/>
						<field name="datas" filename="datas_fname" attrs="{'invisible':[('type','=','url')]}"/>
                        <field name="datas_fname" invisible="1" attrs="{'invisible':[('type','=','url')]}" class="oe_inline oe_right"/>
						<field name="attachment_id" invisible="1"/>
						<field name="type" invisible="1"/>
						<field name="bank_file_type" invisible="0" readonly="1"/>
					</group>
					<group>
						<field name="invoice_ids" widget="many2many_tags"/>
					</group>
					<group name="content_data" string="Index Content">
						<field name="index_content" nolabel="True"/>
					</group>
				</form>
			</field>
		</record>
		
		<record id="view_bank_file_attachment_tree" model="ir.ui.view">
			<field name="name">bank.file.attachment.tree</field>
			<field name="model">bank.file.attachment</field>
			<field name="arch" type="xml">
				<tree string="Bank File Attachment" create='false' edit='false'>
					<field name="name"/>
					<field name="attachment_id" invisible="1"/> 
					<field name="type" invisible="1"/>
					<field name="datas" filename="datas_fname" attrs="{'invisible':[('type','=','url')]}"/>
                    <field name="datas_fname" invisible="1" attrs="{'invisible':[('type','=','url')]}" class="oe_inline oe_right"/>
				</tree>
			</field>
		</record>
		
		<record id="action_bank_file_attachment" model="ir.actions.act_window">
            <field name="name">Bank Files</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.file.attachment</field>
            <field name="view_type">form</field>
        </record>
        
        <menuitem action="action_bank_file_attachment" id="menu_action_bank_file_attachment" parent="account.menu_finance_payables" sequence="90"/>
        
    	<record id="action_res_partner_uon_bank_account_form" model="ir.actions.act_window">
            <field name="name">Bank Accounts</field>
            <field name="res_model">res.partner.bank</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
             <field name="domain">[('bank_id.bank_uob','=','True')]</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Click to create a bank account.
              </p>
            </field>
        </record>
        
    	<record model="ir.ui.view" id="partner_view_buttons_uob_bank_inherit_form">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.partner_view_buttons"/>
            <field name="arch" type="xml">
            	<xpath expr="//group[@name='banks']/field[@name='currency_id']" position="after">
            		<field name="is_giro_payment" invisible="0"/>
            	</xpath>
<!--             	<group name="banks" position="replace"> -->
<!-- 					<group string="Bank" name="banks"> -->
<!--                         <field name="currency_id" invisible="1"/> -->
                        
<!--                         <div> -->
<!--                             <button type="action" class="btn-link" name="(action_res_partner_uon_bank_account_form)d" context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}"> -->
<!--                                 <field string="UOB GIRO Payment(s)" name="bank_uob_account_count" widget="statinfo"/> -->
<!--                             </button> -->
<!--                         </div> -->

<!--                     </group> -->
<!--             	</group> -->
            </field>
         </record>
    
    
    <record model="ir.ui.view" id="account_invoice_supplier_giro_payment_form">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//group/group/field[@name='reference']" position="after">
            		<field name="is_giro_payment" invisible="0" readonly="1"/>
            	</xpath>
            </field>
     </record>
        
     <record model="ir.ui.view" id="account_invoice_supplier_giro_payment_search">
            <field name="name">account.invoice.supplier.giro.search</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='date']" position="after">
            		<separator/>
                    <filter domain="[('is_giro_payment','=',True)]" string="Giro Payment" name="giro_payment"/>
            	</xpath>
            </field>
     </record>
    	
    
	</data>
</odoo>